@model Group
@{
    ViewBag.Title = "Edit Group";
    Layout = "_AdminLayout";
}

<h1>Create / Edit Group</h1>
<form asp-action="EditGroup" method="post">
    <input type="hidden" asp-for="GroupId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateBeginAction"></label>
        <div><span asp-validation-for="DateBeginAction" class="text-danger"></span></div>
        <input asp-for="DateBeginAction" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateEndAction"></label>
        <div><span asp-validation-for="DateEndAction" class="text-danger"></span></div>
        <input asp-for="DateEndAction" type="date" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Groups" class="btn btn-secondary">Cancel</a>
    </div>
</form>