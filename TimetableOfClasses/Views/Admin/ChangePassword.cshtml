@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change User Password";
    Layout = "_AdminLayout";
}

<h1>Change User Password</h1>
<form asp-action="ChangePassword" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <div><span asp-validation-for="OldPassword" class="text-danger"></span></div>
        <input asp-for="OldPassword" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
        <input asp-for="NewPassword" type="password" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </div>
</form>