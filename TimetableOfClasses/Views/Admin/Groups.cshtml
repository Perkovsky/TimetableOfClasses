@model IEnumerable<Group>

@{
    ViewBag.Title = "All Groups";
    Layout = "_AdminLayout";
}

<h1>Groups</h1>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Date Begin Action</th>
        <th>Date End Action</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td class="text-right">@item.GroupId</td>
        <td>@item.Name</td>
        <td>@item.DateBeginAction.ToShortDateString()</td>
        <td>@item.DateEndAction.ToShortDateString()</td>
        <td class="text-center">
            <form asp-action="DeleteGroup" method="post">
                <a asp-action="EditGroup" class="btn btn-sm btn-warning"
                   asp-route-groupId="@item.GroupId">
                    Edit
                </a>
                <input type="hidden" name="GroupId" value="@item.GroupId" />
                <button type="submit" class="btn btn-danger btn-sm">
                    Delete
                </button>
            </form>
        </td>
    </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateGroup" class="btn btn-primary">Add Group</a>
</div>