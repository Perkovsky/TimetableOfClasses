@model IEnumerable<TimetableOfClassesViewModel>

@{
    Layout = "_Layout";
}

@if (Model.Count() == 0)
{
    <div class="col-12 text-center">
        <div class="alert alert-success alert-block" role="alert">
            <h2><i class="fa fa-info-circle"></i> Timetable Of Classes is empty</h2>
        </div>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="col-4 mb-2 text-center">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Group?.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Date: @item.Date.ToShortDateString()</h6>
                    <table class="table table-bordered table-sm">
                        @foreach (var timetable in item.Timetables)
                        {
                            <tr>
                                <td>@timetable.TimeBegin.ToShortTimeString() - @timetable.TimeEnd.ToShortTimeString()</td>
                                <td>@timetable.Discipline?.Name</td>
                                <td>@timetable.Teacher?.Name</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
}