@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="css/signin.css" />
    <title>Timetable Of Classes</title>
</head>
<body>
    <div class="container" asp-validation-summary="All">
        <form class="form-signin" asp-action="Login" asp-controller="Account" method="post">
            <h2 class="form-signin-heading text-center">- Please login -</h2>
            <div class="form-group">
                <label asp-for="Name" class="sr-only"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" placeholder="Name" required autofocus />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>
        </form>
    </div> <!-- /container -->
</body>

</html>